@model PlaneProject.Models.Reservations

@{
    ViewBag.Title = "Reservations";
}

<h2>Reservation</h2>




<style>
    .disabled label {
        color: #ccc;
    }

    .dropbtn {
        background-color: #4c7caf;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ddd;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #4cadaf;
    }
</style>





@using (Html.BeginForm("ReservationInsert", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <h2> You are booking for flight @Model.NameOfFlight</h2>
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.FirstName, new { placeholder = "First Name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.SecondName, new { placeholder = "Second Name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SecondName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.LastName, new { placeholder = "Last Name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.EGN, new { placeholder = "EGN", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EGN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Phone", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Nationality, new { placeholder = "Nationality", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <select class="form-control" id="TypeOfTicket" name="TypeOfTicket">
                <option>First class</option>
                <option>Second class</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.NameOfFlight, new { placeholder = "Second Name", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input style="width:100%" type="submit" value="Create" class="btn form-btn" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
